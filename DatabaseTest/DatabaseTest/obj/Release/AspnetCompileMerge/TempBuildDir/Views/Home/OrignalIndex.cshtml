@model IEnumerable<DatabaseTest.Models.HistoricalPlaces>

@{
    ViewBag.Title = "Index";
}

<div class="container heading- container">
    <div class="heading">Indian Historical Places Database</div>
</div>
<hr/>

<p>
    @Html.ActionLink("Add new place ", "Create")
</p>

<br/>

<table class="table"> @*An HTML table is defined with the <table> tag.*@
    <tr class="table-header"> @*A row in the table is defined with the <tr> tag*@
        <th class="text-left"> @*A table header is defined with <th> tag*@
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th class="text-left">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="text-left">
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th class="text-right">
            @Html.DisplayNameFor(model => model.Year)
        </th>

        <th class="text-center">Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-left">
            <img src="@Url.Content(item.Picture)" height="100" />
                        
        </td>
        
        <td class="text-left">
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td class="text-left">
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td class="text-right">
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td class="text-center">
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
